.hora {
  &-loading {
    display: none;
    justify-content: stretch;
    align-content: start;
    width: 100%;
    height: 100%;
    background-color: var(--HORA--loading--background-color);
    border-radius: var(--HORA--loading--border-radius);

    &--visible {
      display: grid;
    }
  }
}
