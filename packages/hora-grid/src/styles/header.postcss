.hora {
  &-header {
    margin: 1em 0;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-content: stretch;
    align-items: center;

    &--left {
      order: 0;
      flex: 1 1 auto;
      align-self: auto;
    }

    &--right {
      order: 1;
      flex: 0 1 auto;
      align-self: auto;
    }

    &__title {
      font: var(--HORA--headline--title-font);
      color: var(--HORA--headline--title-color);
    }

    &__button {
      font-size: 1em;
    }
  }
}
