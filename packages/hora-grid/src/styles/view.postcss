.hora {
  --HORA--view--background-color: rgb(--hr-color-white);

  /* apperance of settings-block */
  &-loading {
    display: none;
    justify-content: stretch;
    align-content: start;
    width: 100%;
    height: 100%;
    background-color: var(--HORA--view--background-color);

    &--visible {
      display: grid;
    }
  }
}
