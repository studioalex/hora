.hora {
  /* apperance of settings-block */
  &-settings {
    display: none;
    grid-template-columns: 1fr;
    grid-template-rows: minmax(20px, auto) 1fr;
    width: 100%;
    height: 100%;
    padding: 1em;
    background-color: var(--HORA--settings--background-color);
    border-radius: var(--HORA--settings--border-radius);
    text-align: left;
    box-sizing: border-box;

    &--visible {
      display: grid;
    }
  }
}
